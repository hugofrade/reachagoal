  <body id='login-page'>
    <section id='login-page'>
      <!-- ### Header ### -->
      <div class='background'></div>
      <article class='header'>
        <div class='container'>
          <div class='row logonav'>
            <div class='col-md-6' id='logo'>
            	<a href='<%=root_path%>'>
					<img alt='Reachagoal' src='/assets/logo.png'>
				</a>
            </div>
            <div class='col-md-6 buttons'>
              <ul class='pull-right' id='navigation'>
                <li>
                	<%= link_to "Login", new_user_session_path, :class => 'login'  %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </article>
      <article class='signupForm'>
        <div class='container'>
          <div class='row'>
			  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

	            <div class='col-md-4 col-md-offset-4 formWrapper'>
	              <h1 class='formTitle text-center'>Criar conta</h1>
	             
	                <div class='row'>
	                  <div class='form-group col-md-6'>
	                    <div class='wrapper'>
	                      <%= f.text_field :name, :class => 'form-control input-lg', :placeholder => "nome" %>
	                    </div>
	                  </div>
	                  <div class='form-group col-md-6'>
	                    <div class='wrapper'>
							<%= f.text_field :surname, :class => 'form-control input-lg', :placeholder => "apelido" %>
	                    </div>
	                  </div>
	                </div>
	                <div class='row'>
	                  <div class='form-group col-md-12'>
	                    <div class='wrapper'>
	                     	<%= f.email_field :email, :class => 'form-control input-lg', :placeholder => "email" %>
	                      <i class='fa fa-2x fa-at'></i>
	                    </div>
	                  </div>
	                </div>
	                <div class='row'>
	                  <div class='form-group col-md-12'>
	                    <div class='wrapper'>
	                        <%= f.password_field :password, autocomplete: "off", :class => 'form-control input-lg', :placeholder => "palavra-passe"  %>
	                      <i class='fa fa-2x fa-lock'></i>
	                    </div>
	                  </div>
	                </div>
	              
	              
		            </div>
		            
		            <div class='col-md-4 col-md-offset-4'>
						<div class='row footer'>
							<div class='form-group col-md-12'>
								<%= f.submit "Registar", :class => 'btn btn-primary input-lg' %>
							</div>
						</div>
	            </div>
				<%= devise_error_messages! %>

            <%end%>

          </div>
        </div>

      </article>
    </section>