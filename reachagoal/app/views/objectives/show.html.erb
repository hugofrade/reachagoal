<div>
  <h2>Valores poupados</h2>
  
  
  
  <ol>
      <% @objective.objective_values.each do |value| %>
      <li> <%= number_to_currency(value.value, :unit => "&euro;".html_safe, :format => "%n %u", :separator => ".", :delimiter => " ", :precision => 2) %><br>
      <time><%= value.created_at%></time>
      <p><%= value.description%></p>
      </li>
    <% end %>
  </ol>
  

    
  <h3>Adicionar novo</h3>
  <%= form_tag "/objectives/#{ @objective.id }/add_value/", method: "post" do %>

    <div class="field">
      <label for="value">Value</label><br>
      <input type="text" name="value" value="0">â‚¬
    </div>
    <div class="field">
      <label for="description">Description</label><br>
      <input type="text" name="description">
    </div>
    <div class="actions">
      <input type="submit">
    </div>

  <% end %>

</div>


<%= link_to 'Edit', edit_objective_path(@objective) if user_signed_in? && @objective.user_id == current_user.id %>
<%= link_to 'Back', objectives_path %>
