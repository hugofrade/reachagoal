<p id="notice"><%= notice %></p>



<p>
  <strong>Name:</strong>
  <%= @objective.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @objective.description %>
</p>

<p>
  <strong>Foto:</strong>
  <%= image_tag @objective.photo.url %>
</p>


<p>
  <strong>Start day:</strong>
  <%= @objective.start_day %>
</p>

<p>
  <strong>End day:</strong>
  <%= @objective.end_day %>
</p>

<p style="font-size: 30px">
  <strong>Saved:</strong>
    <%= number_to_currency(@objective.missing_value, :unit => "&euro;".html_safe, :format => "%n %u", :separator => ".", :delimiter => " ", :precision => 2) %> /
  <%= number_to_currency(@objective.price, :unit => "&euro;".html_safe, :format => "%n %u", :separator => ".", :delimiter => " ", :precision => 2) %>
</p>

